<Window x:Class="SteamTools.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SteamTools.UI.ViewModels"
        mc:Ignorable="d"
        Title="Main"
        Height="400"
        Width="480"
        WindowStyle="None"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">

    <Grid Background="#202020">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#1C1C1C">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <Border>
                    <TextBlock Text="SteamTools" Style="{StaticResource FadeTextBlock}" />
                </Border>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="80"
                            Command="{Binding IDScannerCommand}"
                            Content="ID Scanner"
                            Style="{StaticResource MWButton}" />
                    <Button Width="80"
                            Command="{Binding LocalProfileScannerCommand}"
                            Content="Local Profile"
                            Style="{StaticResource MWButton}" />
                    <Button Width="80"
                            Command="{Binding ProfileDataFetcherCommand}"
                            Content="Profile Data"
                            Style="{StaticResource MWButton}" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="40"
                            Content="—"
                            Command="{Binding MinimizeApplicationCommand}"
                            Style="{StaticResource MWButton}" />
                    <Button Width="40"
                            Content="✕"
                            Command="{Binding ShutdownApplicationCommand}"
                            Style="{StaticResource MWButton}" />
                </StackPanel>
            </Grid>
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding MoveApplicationCommand}" />
            </Grid.InputBindings>
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding Navigation.CurrentView}" />
    </Grid>
</Window>