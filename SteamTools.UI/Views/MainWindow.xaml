<Window x:Class="SteamTools.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SteamTools.UI.ViewModels"
        mc:Ignorable="d"
        Title="Main"
        Height="300"
        Width="480"
        WindowStyle="None"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">

    <Grid Background="#202020">

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#1C1C1C">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="SteamTools" Style="{StaticResource FadeTextBlock}" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource MWButton}"
                        Width="80"
                        Command="{Binding IDScannerCommand}"
                        Content="ID Scanner" />
                <Button Style="{StaticResource MWButton}"
                        Width="80"
                        Command="{Binding LocalProfileScannerCommand}"
                        Content="Local Profile" />
                <Button Style="{StaticResource MWButton}"
                        Width="80"
                        Command="{Binding ProfileDataFetcherCommand}"
                        Content="Profile Data" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource MWButton}"
                        Width="40"
                        Content="—"
                        Command="{Binding MinimizeApplicationCommand}" />
                <Button Style="{StaticResource MWButton}"
                        Width="40"
                        Content="✕"
                        Command="{Binding ShutdownApplicationCommand}" />
            </StackPanel>

            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding MoveApplicationCommand}" />
            </Grid.InputBindings>
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding Navigation.CurrentView}" />
    </Grid>
    <!--
        - Добавить общий центр уведомления в MainWindow между FadeTextBlock и ControlButtons, например:
            Copied
            Loaded
            Failed
        - Добавить выделение активного меню посредством увеличения альфы кнопки, которая делает redirect на это меню
    -->
</Window>